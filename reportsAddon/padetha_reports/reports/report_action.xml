<!--        Sale excel print-->
        <record id="action_print_sale_orders_excel_controller" model="ir.actions.server">
            <field name="name">Sales Excel Print</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="state">code</field>
            <field name="code"><![CDATA[
context = env.context
record_ids = context.get('active_ids', [])

if not record_ids and context.get('active_id'):
    # If there are no active_ids (list view), check for active_id (form view).
    record_ids = [context.get('active_id')]

if record_ids:
    # Build the action that calls the URL controller
    action = {
        'type': 'ir.actions.act_url',
        'target': 'self',
        'url': '/reports/sale_order/excel?model=%s&ids=%s' % (model._name, record_ids),
    }
else:
    # Optional: Raise an error if no records are selected.
    # This gives feedback to the user instead of doing nothing.
    raise UserError("Please select at least one record to print the report.")
]]>
</field>
